<Window x:Class="NeuralNetwork.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NeuralNetwork"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid HorizontalAlignment="Stretch"  VerticalAlignment="Stretch" >
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="275*"/>
            </Grid.RowDefinitions>
            <Button x:Name="button" Content="GO"  Margin="5,5,192.4,5" VerticalAlignment="Stretch" Click="button_Click"/>
            <TextBox x:Name="txtBox" HorizontalAlignment="Stretch"  Grid.Row="1" TextWrapping="Wrap" VerticalAlignment="Stretch" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Visible" />
            <Button x:Name="buttonOpen" Content="Открыть" HorizontalAlignment="Left" Margin="331,5,0,0" VerticalAlignment="Top" Width="95" Click="buttonOpen_Click"/>
            <Button x:Name="testBtn" Content="Test" HorizontalAlignment="Left" Margin="433,4,0,0" VerticalAlignment="Top" Width="75" Click="testBtn_Click"/>
        </Grid>
    </Grid>
</Window>
